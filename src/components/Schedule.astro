---
const schedule = {
  "Day 1": [
    { time: "8:00 AM", event: "Doors Open" },
    { time: "8:15 AM", event: "Opening Ceremony" },
    { time: "8:30 AM", event: "Introductions & Team Formation" },
    { time: "9:00 AM", event: "Breakfast" },
    { time: "10:00 AM", event: "Workshops Begin" },
    { time: "2:00 PM", event: "Lunch" },
    { time: "3:30 PM", event: "Project Work Continues" },
    { time: "6:00 PM", event: "Snacks" },
    { time: "8:00 PM", event: "Dinner" },
    { time: "10:00 PM", event: "Game Night" },
    { time: "11:30 PM", event: "Game Night Ends / Sleep if you'd like to :)" }
  ],
  "Day 2": [
    { time: "8:00 AM", event: "Convene" },
    { time: "9:00 AM", event: "Breakfast" },
    { time: "4:30 PM", event: "Finalize Projects" },
    { time: "5:00 PM", event: "Submissions Open" },
    { time: "5:30 PM", event: "Judges Review" },
    { time: "6:30 PM", event: "Announcements" },
    { time: "7:00 PM", event: "Prize Distribution" },
    { time: "7:30 PM", event: "Closing Ceremony" },
    { time: "8:00 PM", event: "Event Wrap-Up" }
  ]
};
---

<section class="section">
  <div class="subsection">
    <h2>Run of Show</h2>
    {Object.entries(schedule).map(([day, events]) => (
      <>
        <h3>{day}</h3>
        <table class="run-of-show">
          <thead>
            <tr>
              <th>Time</th>
              <th>Event</th>
            </tr>
          </thead>
          <tbody>
            {events.map(({ time, event }) => (
              <tr>
                <td>{time}</td>
                <td>{event}</td>
              </tr>
            ))}
          </tbody>
        </table>
      </>
    ))}
  </div>
</section>
